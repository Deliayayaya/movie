extends ../layout
block content
	.container(style='margin-top:40px')
		.row
			each cat in categories
				.panel.panel-default
					.panel-heading
						a(href='/results?cat=#{cat._id}&p=0')
							h3 #{cat.name}
						.panel-body
							if cat.movies && cat.movies.length > 0
								each item in cat.movies
									.col-md-2
										.thumbnail
											a(href="/movie/#{item._id}")
												img(src="#{item.flash}", alt="#{item.title}")
												.caption
												h3 #{item.title}
												p: a.btn.btn-primary(href="/movie/#{item._id}", role="button") 观看预告片
