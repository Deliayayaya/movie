extends ../layout
block content
	.container
		.row
			form.form-horizonal(method='GET', action='/signin')
				.form-group
					label(for='username') 用户名
					input#username.form-control(type='text', name='user[name]')
				.form-group
					label(for='password') 密码
					input#password.form-control(type='password', name='user[password]')
				.form-group
					button.btn.btn-primary(type='submit') 登录
