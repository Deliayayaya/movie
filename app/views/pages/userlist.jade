extends ../layout
block content
	.container
		.row
			table.table
				thead
					th 名字
					th 密码
					th 时间
					//-th 查看
					th 修改
					th 删除
				tbody
					each item in users
						tr(class='item-id-#{item._id}')
							td #{item.name}
							td #{item.password}
							td #{moment(item.meta.updateAt).format(MM/DD/YYYY)}）
							//-td
								//-a(target='_blank', href='../user/#{item._id}') 查看
							td
								a(target='_blank', href='../userchange/#{item._id}') 修改
							td
								button.btn.btn-danger.deluser(type='button', data-id='#{item._id}') 删除
	script(type='text/javascript' src="/userdelete.js")
