.container
	.row
		.page-header
			.col-md-4
				h3 #{title}
			.col-md-8
				form(method='GET', action='/results')
					.input-group.col-sm-4.pull-right
						input.form-control(type='text', name='q')
						span.input-group-btn
							button.btn.btn-default(type='submit') 搜索
.navbar.navbar-default.navbar-fixed-top
	if user
		p.navbar-text(style="position:absolute;top:0px;right:22px")
			span welcome,#{user.name}
			span &nbsp;|&nbsp;
			a.navbar-link(href='/loginout') 登出
	else
		p.navbar-text(style="position:absolute;top:0px;right:22px")
			a.navbar-link(data-toggle='modal', data-target='#register', href='#') 注册
			span &nbsp;|&nbsp;			 
			a.navbar-link(data-toggle='modal', data-target='#signin', href='#') 登录
#register.modal.fade
	.modal-dialog
		.modal-content
			form(method='POST', action='/user/register')
				.modal-header
					button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
					#myModalLabel.modal-title 注册
				.modal-body
					.form-group
						label(for='registerName') 用户名
						input#registerName.form-control(type='text',name='user[name]')
					.form-group
						label(for='password') 密码
						input#password.form-control(type='password',name='user[password]')
				.modal-footer
					button.btn.btn-default(data-dismiss='modal') 关闭
					button.btn.btn-primary(type='submit') 注册
#signin.modal.fade
	.modal-dialog
		.modal-content
			form(method='POST', action='/user/signin')
				.modal-header
					button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
					#myModalLabel.modal-title 登录
				.modal-body
					.form-group
						label(for='signuser') 用户名
						input#signuser.form-control(type='text',name='user[name]')
					.form-group
						label(for='signpassword') 密码
						input#signpassword.form-control(type='password',name='user[password]')
				.modal-footer
					button.btn.btn-default(data-dismiss='modal') 关闭
					button.btn.btn-primary(type='submit') 登录